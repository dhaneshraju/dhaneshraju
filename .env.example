# Required for Groq API
VITE_GROQ_API_KEY=your_groq_api_key_here

# Required for Pinecone
VITE_PINECONE_API_KEY=your_pinecone_api_key_here
VITE_PINECONE_ENVIRONMENT=your_pinecone_environment  # e.g., us-west1-gcp
VITE_PINECONE_INDEX=your_pinecone_index_name

# Required for Hugging Face
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Optional: Fallback environment variables (without VITE_ prefix)
# GROQ_API_KEY=your_groq_api_key_here
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX=your_pinecone_index_name
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Server configuration
PORT=3000
NODE_ENV=development
